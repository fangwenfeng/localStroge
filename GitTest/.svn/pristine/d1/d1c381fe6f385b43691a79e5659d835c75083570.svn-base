	function openScanner(){
		api.confirm({
		    title: '消息提示',
		    msg: '是否开启二维码扫描',
		    buttons: ['打开', '取消']
		}, function(ret, err){
		    if( ret.buttonIndex == 1 ){
		         var scanner = api.require('scanner');
		         scanner.open();
		    }else{
		         alert( 'do nothing' );
