<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>云API</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/style.css"/>
    <style>
        .empty{ text-align: center; padding: 120px 0; }
    </style>
</head>
<body>
    <div class="empty">
       <button onclick="sms()">发送验证码</button>
    </div>
    <div class="empty">
       <button onclick="openScanner()">开启二维码扫描</button>
    </div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script src="../script/SHA1.js "></script>
<script>
	function openScanner(){
		api.confirm({
		    title: '消息提示',
		    msg: '是否开启二维码扫描',
		    buttons: ['打开', '取消']
		}, function(ret, err){
		    if( ret.buttonIndex == 1 ){
		         var scanner = api.require('scanner');
		         scanner.open();
		    }else{
		         alert( 'do nothing' );
		    }
		});
	}

	var now = Date.now();
	var appKey = SHA1("A6910238843710"+"UZ"+"56A1A3DC-D383-CE4D-3749-B54864FCC48A"+"UZ"+now)+"."+now  ;
	function sms(){
		$.ajax({
		    "url": "https://d.apicloud.com/mcm/api/user/sendvercode",
		    "method": "POST",
		    "cache": false,
		    "headers": {
		        "X-APICloud-AppId": "A6910238843710",
		        "X-APICloud-AppKey": appKey
		    },
		    "data": {"mobile":+8618215552696}
		}).success(function (data, status, header) {
		    alert("成功！");
		}).fail(function (header, status, errorThrown) {
		     alert("失败");
		})
	}
	
</script>
</html>